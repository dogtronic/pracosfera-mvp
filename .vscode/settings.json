{
  // Polish Spell Checker - konfiguracja dla języka polskiego
  "cSpell.language": "pl,en",
  "cSpell.enabledLanguageIds": [
    "html",
    "javascript",
    "typescript",
    "markdown",
    "plaintext"
  ],
  
  // Słowniki
  "cSpell.dictionaries": [
    "pl"
  ],
  
  // Ignoruj niektóre wzorce w plikach HTML
  "cSpell.ignoreWords": [
    "pracosfera",
    "franczyzobiorcy",
    "franczyzobiorca",
    "MPK",
    "checkout",
    "checkin",
    "tailwindcss"
  ],
  
  // Ignoruj atrybuty HTML i klasy CSS
  "cSpell.ignoreRegExpList": [
    "/class=\"[^\"]*\"/g",
    "/className=\"[^\"]*\"/g",
    "/id=\"[^\"]*\"/g",
    "/href=\"[^\"]*\"/g",
    "/src=\"[^\"]*\"/g",
    "/onclick=\"[^\"]*\"/g",
    "/data-[^=]*=\"[^\"]*\"/g",
    "/stroke-[^=]*=\"[^\"]*\"/g",
    "/fill=\"[^\"]*\"/g",
    "/viewBox=\"[^\"]*\"/g",
    "/d=\"[^\"]*\"/g",
    "/\\b[A-Z_]+\\b/g"
  ],
  
  // Ustawienia dla plików HTML
  "[html]": {
    "cSpell.language": "pl,en"
  },
  
  // Wyłącz sprawdzanie w komentarzach HTML (opcjonalne)
  "cSpell.checkLimit": 500
}
